<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @show_tweet.image %>);">
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', edit_tweet_path(@show_tweet.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', tweet_path(@show_tweet.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= @show_tweet.text %></p>
    <span class="name"><%= @show_tweet.name %>
    </span>
  </div>
</div>
