<!DOCTYPE html>
<html>
  <head>
    <title>TechTweet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">TechTweet</a></h1>
          <% if user_signed_in? %>
            <div class="user_nav grid-6">
              <%# <a class="post" href="/tweets/new">ログアウト</a> %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "post" %>
              <%# <a class="post" href="/tweets/new">投稿する</a> %> 
              <%= link_to "投稿する", new_tweet_path, class: "post" %>
            </div>
          <% else %>
            <div class="user_nav grid-6">
              <%# <a class="post" href="/tweets/new">ログイン</a> %>
              <%= link_to "ログイン", new_user_session_path, class: "post" %>
              <%# <a class="post" href="/tweets/new">新規登録</a> %>
              <%= link_to "新規登録", new_user_registration_path, method: :get, class: "post" %>
            </div>
          <% end %>
      </div>
    </header>
    <%= yield %>
    <footer>
      <p>
        Copyright TechTweet 2019.
      </p>
    </footer>
  </body>
</html>


